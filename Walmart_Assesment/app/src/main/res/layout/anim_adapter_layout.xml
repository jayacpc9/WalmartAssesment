<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/anim_image_view"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:layout_marginRight="10dp"
        />

    <TextView
        android:id="@+id/anim_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_toRightOf="@id/anim_image_view"
        android:layout_marginBottom="16dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/anim_rated_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginBottom="16dp"
        android:layout_below="@id/anim_title_text_view"
        android:layout_toRightOf="@id/anim_image_view"
        android:textColor="@color/black" />
    <TextView
        android:id="@+id/anim_description_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginBottom="16dp"
        android:maxLines="4"
        android:layout_below="@id/anim_rated_text_view"
        android:layout_toRightOf="@id/anim_image_view"
        android:textColor="@color/black" />
</RelativeLayout>